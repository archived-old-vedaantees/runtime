<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="data:image/x-icon;" type="image/x-icon">
    <title>@ViewBag.Title</title>
    <link href="https://fonts.googleapis.com/css?family=Nunito:300,400,700|Material+Icons" rel="stylesheet">
    <link href="~/axelius.all.css" rel="stylesheet" />
    <style>
        body, html { margin: 0; padding: 0; overflow:auto; }
        * { box-sizing: border-box; }
        body { font-family:'Nunito'; background-image:url('/background-0.jpg');background-size:cover; }
        #app { background-color:transparent; }
        #logo-card { background-color:rgba(255,255,255, 0.0); }
        #form-card{ background-color:rgba(255,255,255, 0.9); }
        .logo { width:100%;max-width:400px;height:auto; }
        h1,h2,h3,h4,h5{ font-weight:300 !important; }
    </style>
</head>

<body>
    <div id="preloader">
        <img src="~/loading.gif" width="100" height="100"/>
        <h6 class="title">Loading</h6>
    </div>

    <v-app id="app">
        <v-container fluid>
            <v-layout justify-center class="mt-2">
                <v-flex xs12 md10 lg7 xl6>
                    <v-card flat id="logo-card" class="mb-4">
                        <v-card-text class="text-xs-center">
                            <img src="/logo.jpg" class="logo" />
                        </v-card-text>
                    </v-card>
                    @RenderBody()
                </v-flex>
            </v-layout>
        </v-container>
    </v-app>
    <script src="https://unpkg.com/vue/dist/vue.js"></script>
    <script src="https://unpkg.com/vuetify/dist/vuetify.js"></script>
    @RenderSection("scripts", false)
</body>
</html>